GuiClose:
    ExitApp


;;∙============∙Function∙==================∙
pk(_search, _pattern, _case := 0)
{
    if (_case)
        _pattern := "(?-i)" . _pattern    ;;∙------∙Enable case sensitivity.

    _keymatch := RegExMatch(_search, "\b(" . _pattern . ")\b")
    return _keymatch
}

