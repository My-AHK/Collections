exclude := "Program Manager|Start|Windows Task Manager|MainWindow"
Gui, +AlwaysOnTop
Gui Font, s10
Gui Color, 676767
Gui Add, ListView, w850 r11 +Grid ReadOnly Count20 BackgroundF0F0F0, Process|Window title
WinGet winArray, List                                    ; Get list of all windows
Loop % winArray {                                        ; Loop through each window
 WinGetTitle title       , % winTitle := "ahk_id" winArray%A_Index%
 WinGet proc, ProcessName, % winTitle
 If !(title ~= "i)^(" exclude ")$") && visible(winTitle) ; If title is not excluded, and window is visible,
  LV_Add(, StrReplace(proc, ".exe"), title)              ;  then add it to the ListView
}
LV_ModifyCol(1, "Auto")      ;;∙------∙Automatically adjusts the width of the 'Process' column.
Sleep, 100                   ;;∙------∙Wait a moment to ensure the column is resized.
columnWidth := 0
Loop, % LV_GetCount()        ;;∙------∙Loop through all list items to find the max width.
{
    LV_GetText(itemText, A_Index, 1)
    currentWidth := StrLen(itemText) * 7.25 ;;∙------∙Estimate width based on character count with a finer multiplier (8 instead of 10).
    columnWidth := Max(columnWidth, currentWidth)
}
columnWidth += 10             ;;∙------∙Add 10 pixels to the estimated width for a subtle adjustment.
LV_ModifyCol(1, columnWidth) ;;∙------∙Set the new width of the 'Process' column with the added pixels.
LV_ModifyCol(2, "Auto")      ;;∙------∙Automatically adjusts the width of the 'Window title' column.
LV_ModifyCol(2, "Auto") ;;∙------∙Automatically adjusts the width of the 'Window title' column.
LV_ModifyCol(1, "Sort")
Gui, Font, s12 cLime Bold, Calibri
Gui, Add, Text, x30 y+5 gReload, Reload

Gui Show,, Visible Windows
Return

visible(winTitle) {
 WinGetTitle dwTitle   ,          % winTitle
 WinGet      dwStyle   , Style  , % winTitle
 WinGet      dwExStyle , ExStyle, % winTitle
 WinGetClass szClass   ,          % winTitle
 Return   !(      dwTitle   = ""
             ||   dwStyle   & 0x08000000
             || !(dwStyle   & 0x10000000)
             ||   dwExStyle & 0x00000080
             ||   szClass   = "TApplication" )
}
Return
