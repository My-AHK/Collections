^t::    ;;∙------∙🔥∙(Ctrl + T)
    ;;∙------∙Save the currently active window (the test target).
    WinGet, TargetWinID, ID, A

    shortInstructions := "To continue`, you must be in a text editor with the"
    shortInstructions .= " desired text already selected."
    shortInstructions .= "`nThe number stands for starting position. (Clipboard won't be altered)."

    Gui, New, +AlwaysOnTop  ; Create a new GUI so it doesn't mess with any existing ones.
    Gui, Add, Text, x10 y5, %shortInstructions%
    Gui, Add, Button, x30 y40 Default gButtonNormal, Normal
    Gui, Add, Button, x+10 yp gButtonNormalDistinct, NormalDistinct
    Gui, Add, Button, x+10 yp gButtonReverse, Reverse
    Gui, Add, Button, x+10 yp gButtonReverseDistinct, ReverseDistinct
    Gui, Add, Edit, Limit3 Number W26 X+10 yp vCharPosition, 1
    Gui, Show, W390 H75 Center, Multiline selected text sorter
Return

FormHandler:
    Gui, Submit
    Gui, Destroy
    if (CharPosition = "" || !RegExMatch(CharPosition, "^[1-9]\d{0,2}$")) {
        CharPosition := 1
    }
Return

ButtonNormal:
ButtonNormalDistinct:
ButtonReverse:
ButtonReverseDistinct:

    Gosub, FormHandler
    if (TargetWinID) {
        WinActivate, ahk_id %TargetWinID%
        WinWaitActive, ahk_id %TargetWinID%, , 2
    }

    sortType := ""
    if (A_ThisLabel = "ButtonNormalDistinct")
        sortType := "U"
    else if (A_ThisLabel = "ButtonReverse")
        sortType := "R"
    else if (A_ThisLabel = "ButtonReverseDistinct")
        sortType := "RU"

    Sorter(sortType, CharPosition)
Return

ButtonCancel:
    Gui, Destroy
Return

GuiClose:
    Gui, Destroy
Return

Sorter(sortType, charPosition) {
    local ClipSaved := ClipboardAll
    Clipboard := ""

    Send ^c
    ClipWait, 1
    Sleep, 100

    if (ErrorLevel || Clipboard = "") {
        MsgBox,,, Failed to copy text.`nEnsure text is selected., 3
        Clipboard := ClipSaved
        return
    }

    if !InStr(Clipboard, "`n") {
        MsgBox,,, Clipboard does not contain multiple lines., 3
        Clipboard := ClipSaved
        return
    }

    Sort, Clipboard, %sortType% P%charPosition%
    Sleep, 50

    Send ^v
    Sleep, 100

    Clipboard := ClipSaved
}
Return
