;;∙============================================================∙
2Slid1 := 25, 2Slid2 := 75    ;;∙------∙Current positions of the two sliders. (0..100)
2SlidW := 199    ;;∙------∙The width of the scale.
2SlidK := 2SlidW/100 , 2SlidU := 2SlidW+18, 2SlidV := 2SlidU-1    ;;∙------∙Auxiliary variables.

Gui, Add, Progress, x20 y20 w%2SlidW% h3 BackgroundLime Disabled
Loop 2
    Gui, Add, Slider, x10 y15 w%2SlidU% v2Slid%A_Index% g2Slid%A_Index% hwnd2SlidHwnd%A_Index% AltSubmit Range0-100 TickInterval5 Thick13 -Theme ToolTip
        GoSub, 2Slid
    Gui, +AlwaysOnTop -Border
    Gui, Color, Yellow
    Gui, Show, x1550 w240 h50
Return

2Slid1:
    2Slid2 := 2Slid1 < 2Slid2 ? 2Slid2 : 2Slid1
    GoTo 2Slid
2Slid2:
    2Slid1 := 2Slid1 < 2Slid2 ? 2Slid1 : 2Slid2

2Slid:    ;;∙------∙Cut L shape from left slider, box of right slider to show background.
    GuiControl,,2Slid1, %2Slid1%
    GuiControl,,2Slid2, %2Slid2%
        2SlidX := round(2SlidK*2Slid1+13)
        2SlidZ := round(2SlidK*2Slid2+6)
    WinSet Region,% "1-1 " 2SlidX "-1 " 2SlidX "-19 1-19", ahk_id %2SlidHwnd1%
    WinSet Region,% 2SlidZ "-1 " 2SlidV "-1 " 2SlidV "-19 " 2SlidZ "-19", ahk_id %2SlidHwnd2%
Return
