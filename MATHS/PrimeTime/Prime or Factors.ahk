#NoEnv
#SingleInstance, Force
SetBatchLines, -1

guiW := 300

Gui, +AlwaysOnTop
Gui, Color, ABCDEF
Gui, Font, s10 w400 BackgroundTrans q5, Arial
Gui, Add, Text, x20 y15 w%guiW% cBlue, Please Enter The Number You'd Like To Test
Gui, Add, Edit, x20 y+10 vNumberInput w260
Gui, Add, Button,  x180 y+15 w55 gExitScript, Cancel
Gui, Add, Button, x240 yp w40 gRunPrimeCheck Default, OK
Gui, Show, x1450 y450 w%guiW% h120 , Prime # Tester
Return

RunPrimeCheck:
    Gui, Submit
    if (NumberInput = "")
        Return

    Number := NumberInput
    Factors := ""
    Matches := 0
    Percent := 0
    Aborted := ""
    Abort := ""

    Gui, Hide
    Loops := Floor(Number / 2)

    Progress, r1-100, Factors found:`n`nEsc to abort, Checking %A_Index% of %Loops% (%Percent%`%)

    Loop, %Loops%
    {
        If Abort
            Break

        Percent := Round((100 * A_Index / Loops), 2)
        Pct := Floor(Percent)

        Progress, %Pct%, Factors found:`n%Matches%`nEsc to abort, Checking %A_Index% of %Loops% (%Percent%`%)

        If (A_Index = 1)
            Continue

        If (Mod(Number, A_Index) != 0)
            Continue

        Factors := Factors . A_Index . ","
        Matches++
    }

    Progress, off
    StringTrimRight, Factors, Factors, 1

    If Factors
        ResultText := "The following factors (" . Matches . " total) of " . Number . " were found:`n" . Factors . Aborted
    Else
        ResultText := Number . " is prime!" . Aborted

    Gosub, ShowResults
    Gui, Show
Return

ShowResults:
    Gui, 2:Destroy
    Gui, 2:+AlwaysOnTop +ToolWindow
    Gui, 2:Add, Text, x10 y10 w280 h80 vResultText, %ResultText%
    Gui, 2:Add, Button, x70 y+10 w70 g2GuiClose, OK
    Gui, 2:Add, Button, x150 yp w90 gCopyResults, Copy to Clipboard
    Gui, 2:Show, w300 h150, Results
Return

CopyResults:
    Gosub, 2GuiClose
    GuiControlGet, ResultText, 2:
    Clipboard := ResultText
    MsgBox,,, Results copied to clipboard.,2
Return

2GuiClose:
    Gui, 2:Destroy
Return

Esc::
    Aborted := "`n(Search aborted at " . Percent . "`%!)"
    Abort := 1
Return

ExitScript:
    ExitApp
Return
