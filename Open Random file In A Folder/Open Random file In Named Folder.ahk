;;∙------------------------∙
SelectRandomItem(folderPath) {
    shell := ComObjCreate("Shell.Application")    ;;∙------∙Create a Shell application object for folder access.
    try folder := shell.Namespace(folderPath)    ;;∙------∙Attempt to retrieve the folder object...handle errors.
    catch {
        MsgBox, 16, Error, Could not open the folder at:`n`n%folderPath%, 3
        Return
    }
    if (!folder) {    ;;∙------∙Check if the folder is valid...show error if not.
        MsgBox, 16, Error, `tInvalid folder:`n`n%folderPath%, 3
        Return
    }
    items := folder.Items    ;;∙------∙Retrieve all items in the folder and count them.
    itemCount := items.Count
    
    if (itemCount = 0) {    ;;∙------∙Verify the folder contains items; show error if empty.
        MsgBox, 16, Error, `tNo files found in:`n`n%folderPath%, 3
        Return
    }
    Random, itemIndex, 0, itemCount-1    ;;∙------∙Generate a random index for the items.
    selectedItem := items.Item(itemIndex)    ;;∙------∙Select the random item from the folder.
    selectedItem.InvokeVerb("open")    ;;∙------∙Open or execute the selected item.
    
;;∙------∙Clean up COM objects to release resources.
    shell := ""
    folder := ""
    items := ""
    selectedItem := ""
}
Return

