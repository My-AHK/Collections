#InstallKeybdHook
#SingleInstance, Force

FirstModifier := ""    ;;∙------∙Tracks modifier pressed order.

~LShift::
    if (FirstModifier = "" && !GetKeyState("Space", "P"))    ;;∙------∙Only set if Space isn't pressed.
        FirstModifier := "LShift"
Return

~Space::
    if (FirstModifier = "" && !GetKeyState("LShift", "P"))    ;;∙------∙Only set if LShift isn't pressed.
        FirstModifier := "Space"
Return


#If GetKeyState("LShift", "P") && GetKeyState("Space", "P")
*f::    ;;∙------∙🔥∙(LShift + Space + F) 
    Critical    ;;∙------∙Prevent interruptions.

    ;;∙------∙Get current physical key states.
    LShiftDown := GetKeyState("LShift", "P")
    SpaceDown := GetKeyState("Space", "P")

    ;;∙------∙Check if both are actually held down.
    if (LShiftDown && SpaceDown) {
        if (FirstModifier = "LShift") {    ;;∙------∙LShift Pressed First.
            SetTimer, LShiftFirstBeeps, -10
            MsgBox,,, LShift+Space+F pressed,3
        }
        else if (FirstModifier = "Space") {    ;;∙------∙Space Pressed First.
            SetTimer, SpaceFirstBeeps, -10
            MsgBox,,, Space+LShift+F pressed,3
        }
        else {    ;;∙------∙LShift and Space Pressed Simultaneously.
            SetTimer, SimultaneousBeeps, -10
            MsgBox,,, Congratulation!!!`nSomehow you pressed`nboth modifiers at once!,5
        }
    }
    FirstModifier := ""    ;;∙------∙Reset for next use.
Return
#If

~LShift Up::
~Space Up::
    FirstModifier := ""    ;;∙------∙Reset when keys are released.
Return

;;∙------------------------∙SOUNDBEEP ALERTS∙------------------------------------∙
;;∙------------∙LShift First∙------------∙
LShiftFirstBeeps:
    SoundBeep, 1200, 300
    SetTimer, LShiftSecondBeep, -300    ;;∙------∙Second beep after 300ms.
    return
LShiftSecondBeep:
    SoundBeep, 1000, 300
Return

;;∙------------∙Space First∙------------∙
SpaceFirstBeeps:
    SoundBeep, 1000, 300
    SetTimer, SpaceSecondBeep, -300    ;;∙------∙Second beep after 300ms.
        return
SpaceSecondBeep:
    SoundBeep, 1200, 300
Return

;;∙------------∙Simultaneous∙------------∙
SimultaneousBeeps:
    SoundBeep, 800, 300
    SetTimer, SimultaneousSecondBeep, -300    ;;∙------∙Second beep after 300ms.
        return
SimultaneousSecondBeep:
    SoundBeep, 800, 300
Return
