#NoEnv
CoordMode, Mouse, Screen  ; Required

HotkeyToStartTracking := "!LButton"    ;;∙------∙🔥∙
HotkeyToStopTracking  := "LButton"    ;;∙------∙🔥∙
ShowToolTip := true

Hotkey, If, !hHookMouse
Hotkey, % HotkeyToStartTracking, StartTracking
Hotkey, If, hHookMouse
Hotkey, % HotkeyToStopTracking, StopTracking
Return

StartTracking:
   MouseGetPos, MouseX0, MouseY0, hwnd
   if !WinActive("ahk_id" hwnd) {
      WinActivate, ahk_id %hwnd%
      WinWaitActive, ahk_id %hwnd%
   }
   WinGet, MinMax, MinMax
   if (MinMax = 1) {
      WinRestore
      WinGetPos, WinX, WinY, WinW, WinH
      MouseX0 := WinX + WinW//2
      MouseY0 := WinY + 20
      MouseMove, MouseX0, MouseY0, 0
   } else
      WinGetPos, WinX, WinY, WinW, WinH
   MouseX0 -= WinX
   MouseY0 -= WinY
   hHookMouse := DllCall("SetWindowsHookEx", "Int", 14, "Ptr", RegisterCallback("TrackMouse", "Fast"), "Ptr", 0, "UInt", 0, "Ptr")  ; WH_MOUSE_LL = 14
   if ShowToolTip {
      WinGetTitle, Title
      ToolTip % "Tracking " Title
   }
Return

StopTracking:
   DllCall("UnhookWindowsHookEx", "Ptr", hHookMouse, "Int")
   hHookMouse := ""
   if ShowToolTip
      ToolTip
   if (MinMax = 1)
      WinMaximize, A
Return

TrackMouse(nCode, wParam, lParam) {
   global
   if (wParam = 0x200) {  ; WM_MOUSEMOVE = 0x200
      MouseX := NumGet(lParam+0, 0, "Int")
      MouseY := NumGet(lParam+0, 4, "Int")
      DllCall("MoveWindow", "Ptr", hwnd, "Int", MouseX - MouseX0 , "Int", MouseY - MouseY0, "Int", WinW, "Int", WinH, "Int", false, "Int")
      if ShowToolTip
         ToolTip % "Tracking " Title
   }
	Return DllCall("CallNextHookEx", "Ptr", 0, "Int", nCode, "UInt", wParam, "Ptr", lParam)
}

