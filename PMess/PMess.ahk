PMess(ttitle, ttext, textColor := "BLUE", bkg := "AQUA", x := 950, y := 300, dur := 3000) {
    static guiID := 0
    guiID++
    Gui, Box%guiID%:New, , %ttitle%
    Gui, +AlwaysOnTop -Border -Caption
    Gui, Font, s10 c%textColor%
    Gui, Color, %bkg%
    Gui, Add, Text, CENTER gLINK, %ttext%
    Gui, Show, % "x" x " y" y
    SetTimer, ClosePMess%guiID%, -%dur%
        return
    ClosePMess1:    ;;∙------∙Add as many labels as needed for popups.
      ClosePMess2:
        ClosePMess3:
    ClosePMess4:
        ClosePMess5:
            ClosePMess6:
        StringTrimLeft, guiID, A_ThisLabel, 10
        Gui, Box%guiID%:Destroy
    return
}
