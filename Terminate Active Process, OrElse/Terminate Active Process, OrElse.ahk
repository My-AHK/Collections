;;∙------∙Acquire active Process name.
^#!Up::    ;;∙------∙🔥∙(Ctrl+Win+Alt+UpArrow)
    WinGet, activeExe, ProcessName, A
    ClipBoard := activeExe
    ToolTip Process name is...`n%activeExe%
        Sleep 1500
    ToolTip
Return

;;∙------------------------∙
;;∙------∙Close retrieved active Process, or enter another.
^#!Down::    ;;∙------∙🔥∙(Ctrl+Win+Alt+DownArrow)
Gui +LastFound +OwnDialogs +AlwaysOnTop 
InputBox, actWin, Close Process, Close .exe Process below`nOr enter another.,, 200, 150, 1250, 700,, 20, %activeExe%
    if errorlevel = 1    ;;∙------∙Check if 'Cancel' button was pressed.
        {
            Soundget, master_Volume
            SoundSet, 2
                SoundBeep, 700, 200    ;;∙------∙Play beep for Cancel.
            SoundSet, master_Volume
            return
        }
    else
        {
            actWin := actWin
        }
    While WinExist("ahk_exe " actWin)
        {
            Process, Close, %actWin%
        }
    {
        Soundget, master_Volume
        SoundSet, 2
            SoundBeep, 1200, 200    ;;∙------∙Play beeps for Close success.
            SoundBeep, 1100, 200
        SoundSet, master_Volume
    }
ToolTip Process %actWin%`n has now closed.
Sleep, 1500
ToolTip
Return
