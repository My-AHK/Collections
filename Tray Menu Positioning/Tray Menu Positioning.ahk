;;∙------------∙Tray Menu Positioning∙--------------------------------∙
NotifyTrayClick_205:
    CoordMode, Mouse, Screen    ;;∙------∙Mouse coordinates relative to screen.
    CoordMode, Menu, Screen    ;;∙------∙Menu coordinates relative to screen.
    MouseGetPos, mx, my    ;;∙------∙Retrieve mouse cursor position.
    Offset1 := 50 , Offset2 := 20    ;;∙------∙Offsets for tray menu placement.
    Menu, Tray, Show, % mx - Offset1, % my - Offset2    ;;∙------∙Display the tray menu offset from mouse cursor.
Return    ;;∙------∙End the NotifyTrayClick_205 subroutine and return to the caller.

;;∙------------∙Tray Menu Positioning Function---------------------∙
NotifyTrayClick(P*) { 
Static Msg, Fun:="NotifyTrayClick", NM:=OnMessage(0x404,Func(Fun),-1),  Chk,T:=-250,Clk:=1    ;;∙------∙Initialize static variables for message handling.
  If ( (NM := Format(Fun . "_{:03X}", Msg := P[2])) && P.Count()<4 )    ;;∙------∙Format message name and check argument count.
     Return ( T := Max(-5000, 0-(P[1] ? Abs(P[1]) : 250)) )    ;;∙------∙Set default timeout value for menu click event.
  Critical    ;;∙------∙Disable thread interruptions during critical operations.
  If ( ( Msg<0x201 || Msg>0x209 ) || ( IsFunc(NM) || Islabel(NM) )=0 )    ;;∙------∙Exit if the message is out of range or no matching handler exists.
     Return    ;;∙------∙End the function without further processing.
  Chk := (Fun . "_" . (Msg<=0x203 ? "203" : Msg<=0x206 ? "206" : Msg<=0x209 ? "209" : ""))    ;;∙------∙Determine event type based on message ID.
  SetTimer, %NM%,  %  (Msg==0x203        || Msg==0x206        || Msg==0x209)    ;;∙------∙Set timer for specific message types.
    ? (-1, Clk:=2) : ( Clk=2 ? ("Off", Clk:=1) : ( IsFunc(Chk) || IsLabel(Chk) ? T : -1) )    ;;∙------∙Handle toggle states and check for valid handlers.
Return True    
}
